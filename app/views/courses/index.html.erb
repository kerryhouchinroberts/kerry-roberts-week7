<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<h1>All Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Day or Night</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td><%= link_to course.title, course %></td>
      <td><%= human_boolean(course.day_night) %></td>
      <td><%= link_to 'Delete Course', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to "Create a New Course", new_course_path %>
